html,
body {
    margin: 0;
    padding: 0;
    font-size: 14px;
    color: #fff;
    background-color: #000;
    font-family: Helvetica, Arial, sans-serif;
}

.button {
    width: 100%;
    border: none;
    background-color: transparent;
    color: #09f;
    transition: color .2s;
    cursor: pointer;

    &:hover {
        color: #fff;
    }
}
